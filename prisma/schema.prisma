// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // or "mysql" if preferred
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  clerkId   String?   @unique @default(cuid())
  email     String?
  name      String?
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  prompts   Prompt[]
  templates Template[]
}

model Prompt {
  id             String    @id @default(cuid())
  user           User      @relation(fields: [userId], references: [id])
  userId         String
  inputText      String    // userâ€™s plain English input
  outputJson     Json      // generated JSON prompt
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Template {
  id             String    @id @default(cuid())
  name           String
  description    String?
  jsonSchema     Json      // predefined JSON schema
  user           User?     @relation(fields: [userId], references: [id])
  userId         String?
  createdAt      DateTime  @default(now())
}

enum Plan {
  FREE
  BASIC
  PRO
  TEAM
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  EXPIRED
}

enum AuthProvider {
  CREDENTIALS
  GOOGLE
}
